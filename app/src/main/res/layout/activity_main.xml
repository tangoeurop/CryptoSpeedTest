<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    >

    <TextView
        android:id="@+id/tvEncryptionLabel"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="Шифрование номер Карт"
        />

    <LinearLayout
        android:id="@+id/llEncryptionHeader"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/tvEncryptionLabel"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.75"
            android:gravity="center"
            android:text="Номер Карты"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.25"
            android:gravity="center"
            android:text="Продолжительность"
            />

    </LinearLayout>

    <ListView
        android:id="@+id/lwEncryptionData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llEncryptionHeader"
        />

    <TextView
        android:id="@+id/tvDecryptionLabel"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/lwEncryptionData"
        android:gravity="center"
        android:text="Дешифрование номер Карт"
        />

    <LinearLayout
        android:id="@+id/llDecryptionHeader"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/tvDecryptionLabel"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.75"
            android:gravity="center"
            android:text="Номер Карты"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.25"
            android:gravity="center"
            android:text="Продолжительность"
            />

    </LinearLayout>

    <ListView
        android:id="@+id/lwDecryptionData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llDecryptionHeader"
        />
</RelativeLayout>
